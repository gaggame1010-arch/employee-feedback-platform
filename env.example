DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Shared by employees (no login)
COMPANY_ACCESS_CODE=123456

# HR notification emails (comma-separated)
HR_NOTIFY_EMAILS=sales@kyrex.co
DJANGO_DEFAULT_FROM_EMAIL=sales@kyrex.co

# Contact form email (where contact form submissions are sent)
CONTACT_EMAIL=sales@kyrex.co

# Email Backend Configuration
# Railway blocks SMTP, so use one of these API-based services:

# Option 1: Resend (Recommended - Easiest setup, 100 emails/day free)
DJANGO_EMAIL_BACKEND=anonplatform.email_backends.ResendEmailBackend
RESEND_API_KEY=re_your-resend-api-key-here

# Option 2: SendGrid (100 emails/day free)
# DJANGO_EMAIL_BACKEND=anonplatform.email_backends.SendGridEmailBackend
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Option 3: Mailgun (5,000 emails/month free for 3 months, then 1,000/month)
# DJANGO_EMAIL_BACKEND=anonplatform.email_backends.MailgunEmailBackend
# MAILGUN_API_KEY=your-mailgun-api-key-here
# MAILGUN_DOMAIN=mg.yourdomain.com

# For local development: Use console backend (prints emails to console)
# DJANGO_EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For SMTP (Gmail/Google Workspace) - works locally but NOT on Railway
# DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
